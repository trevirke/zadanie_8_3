  "bugs": {
    "url": "https://github.com/trevirke/nauka-gita-2/issues"
  },
  "homepage": "https://github.com/trevirke/nauka-gita-2#readme",
  "dependencies": {
    "glob-run": "^0.1.6",
    "onchange": "^3.2.1",
    "rimraf": "^2.6.2"
  },
  "devDependencies": {
    "browser-sync": "^2.18.13",
    "parallelshell": "^3.0.2"
  }
}
